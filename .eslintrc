{
    "extends": ["eslint-config-nfl", "prettier"],
    "env": {
        "node": true,
        "mocha": true
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "prefer-arrow-callback": [2, {
            "allowNamedFunctions": true
        }],
        "prettier/prettier": ["error", {
            "printWidth": 80,
            "tabWidth": 4,
            "singleQuote": false,
            "trailingComma": "none",
            "bracketSpacing": false,
            "semi": true,
            "useTabs": false,
            "parser": "babylon",
            "jsxBracketSameLine": false
        }]
    },
    "globals": {
        "$": true,
        "$$": true,
        "browser": true,
        "by": true,
        "element": true,
        "protractor": true,
        "beforeAll": true
    },
    "settings": {
        "import/ignore": [
            "node_modules",
            ".(scss|less|css)$",
            ".[^js(x)?]+$"
        ]
    }
}
